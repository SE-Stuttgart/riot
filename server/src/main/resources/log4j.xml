<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!-- This file overrides the one in commons, but is overridden by the one in server/src/test -->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %c{1} - %m%n" />
		</layout>
	</appender>

	<appender name="appender" class="org.apache.log4j.RollingFileAppender">
		<param name="MaxFileSize" value="1000" />
		<param name="MaxBackupIndex" value="1" />
		<param name="file" value="riot.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %c{1} - %m%n" />
		</layout>
	</appender>

	<logger name="org.apache.shiro">
		<level value="warn" />
	</logger>

	<logger name="de.uni_stuttgart.riot">
		<level value="debug" />
	</logger>

	<logger name="de.uni_stuttgart.riot.server.commons.rest.ExceptionLogger">
		<level value="info" />
	</logger>

	<root>
		<priority value="info" />
		<appender-ref ref="appender" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>