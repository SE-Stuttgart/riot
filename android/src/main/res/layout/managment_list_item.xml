<?xml version="1.0" encoding="utf-8"?><!-- ToDo online state close to the image and arrow to the right (for viewing details) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/list_item_margin"
    android:layout_marginRight="@dimen/list_item_margin"
    android:layout_marginTop="@dimen/list_item_margin_top">

    <ImageView
        android:id="@+id/list_item_management_picture"
        android:layout_width="@dimen/list_item_image_size"
        android:layout_height="@dimen/list_item_image_size"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/list_item_margin"/>

    <ImageView
        android:id="@+id/list_item_management_online_state"
        android:layout_width="@dimen/list_item_online_status_size"
        android:layout_height="@dimen/list_item_online_status_size"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/list_item_margin" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/list_item_management_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/list_item_subject_size" />

        <TextView
            android:id="@+id/list_item_management_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_item_description_size" />
    </LinearLayout>
</LinearLayout>